@model Patient
@{
    ViewData["Title"] = "Editar Paciente";
}
<div class="row">
    <form asp-action="Edit">
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <label asp-for="Name" class="control-label">Nombre</label>
            <input asp-for="Name" class="form-control">
        </div>

        <div class="form-group">
            <label asp-for="NumberKey" class="control-label">Historia Clinica</label>
            <input asp-for="NumberKey" class="form-control">
        </div>
        <div class="form-group">
            <label asp-for="ConsultId"></label>
            <select asp-for="ConsultId" name="Consulta">
                @foreach (Consult consult in ViewBag.consults)
                {
                    <option value="@consult.Id">@consult.Description</option>
                }
            </select>
        </div>
        <div class="form.-group">
            <input type="submit" value="Guardar" class="btn btn-primary" />
        </div>
    </form>
</div>
<div>
    <a asp-action="Index" class="btn btn-secondary">Volver</a>
</div>