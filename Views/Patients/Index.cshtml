@model IEnumerable<Patient>
@{
    ViewData["Title"] = "Pacientes";
}
<table class="table">
    <tr>
        <th>@Html.DisplayNameFor(model => model.Name)</th>
        <th>@Html.DisplayNameFor(model => model.NumberKey)</th>
        <th>@Html.DisplayNameFor(model => model.Consult)</th>
        <th>Acciones</th>
    </tr>
    <tbody>
        @foreach (Patient patient in @Model)
        {
        <tr>
            <td> @Html.DisplayFor(modelItem => patient.Name) </td>
            <td rowspan="5">@Html.DisplayFor(modelItem => patient.NumberKey)</td>
            <td > @Html.DisplayFor(modelItem => patient.Consult.DateRealitazion)  </td>
            <td> @Html.DisplayFor(modelItem => patient.Consult.Professional.Name)</td>
            <td> @Html.DisplayFor(modelItem => patient.Consult.Cost)</td>
            <td> @Html.DisplayFor(modelItem => patient.Consult.Description)</td>
            <td> @Html.DisplayFor(modelItem => patient.Consult.CostMaterial)</td>
            <td>
                <a asp-action="Edit" asp-route-id="@patient.Id" class="btn btn-dark">Editar</a> |
                <a asp-action="Delete" asp-route-id="@patient.Id" class="btn btn-danger">Borrar</a>
            </td>
        </tr>
        }
    </tbody>
</table>
<div>
    <a asp-action="Create" class="btn btn-primary">Agregar Nuevo Profesional</a>
</div>
