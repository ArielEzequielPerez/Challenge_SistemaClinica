@model Consult

@{
    ViewData["Title"] = "Crear Consulta";
}
<h1>Agregar una consulta</h1>

<div class="row">
    <form asp-action="Create">
        <div class="form-group">
            <label asp-for="DateRealitazion" class="control-label">Fecha</label>
            <input type="date" asp-for="DateRealitazion" class="form-control">
        </div>
        <div class="form-group">
            <label asp-for="ProfessionalId"></label>
            <select asp-for="ProfessionalId" name="Profesional">
                @foreach (var professional in ViewBag.profesionals)
                {
                    <option value="@professional.Id">@professional.Name</option>
                }
            </select>
        </div>
        <div class="form-group">
            <label asp-for="Cost" class="control-label">Costo</label>
            <input asp-for="Cost" class="form-control">
        </div>
        <div class="form-group">
            <label asp-for="CostMaterial" class="control-label">Costo de material</label>
            <input asp-for="CostMaterial" class="form-control">
        </div>
        <div class="form.-group">
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>

    </form>
</div>
<div>
    <a asp-action="Index" class="btn btn-secondary">Volver</a>
</div>
