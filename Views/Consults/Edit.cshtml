@model Consult
@{
    ViewData["Title"] = "Editar Consulta";
}
<div class="row">
    <form asp-action="Edit">
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <label asp-for="DateRealitazion" class="control-label">Fecha realización</label>
            <input type="date" asp-for="DateRealitazion" class="form-control">
        </div>

        <div class="form-group">
            <label asp-for="Cost" class="control-label">Costo</label>
            <input asp-for="Cost" class="form-control">
        </div>
        <div class="form-group">
            <label asp-for="ProfessionalId"></label>
            <select asp-for="ProfessionalId" name="Profesional">
                @foreach (var professional in ViewBag.profesionals)
                {
                    <option value="@professional.Id">@professional.Name</option>
                }
            </select>
        </div>
        <div class="form-group">
            <label asp-for="CostMaterial" class="control-label">Costo</label>
            <input asp-for="CostMaterial" class="form-control">
        </div>
        <div class="form-group">
            <label asp-for="Description" class="control-label">Especialidad</label>
            <input type="text" asp-for="Description" class="form-control">
        </div>
        <div class="form.-group">
            <input type="submit" value="Guardar" class="btn btn-primary" />
        </div>
    </form>
</div>
<div>
    <a asp-action="Index" class="btn btn-secondary">Volver</a>
</div>