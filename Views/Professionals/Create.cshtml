@model Professional
<h1>Agregar Profesional</h1>

@{
    ViewData["Title"] = "Agregar Profesional";
}

<div class="row">
    <form asp-action="Create">
        <div class="form-group">
            <label asp-for="Name" class="control-label">Nombre</label>
            <input asp-for="Name" class="form-control">
        </div>
        <div class="form-group">
            <label asp-for="NumberKey" class="control-label">Matricula</label>
            <input asp-for="NumberKey" class="form-control">
        </div>
        <div class="form-group">
            <label asp-for="Speciality" class="control-label">Especialidad</label>
            <input asp-for="Speciality" class="form-control">
        </div>
        <div class="form.-group">
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>

    </form>
</div>
<div>
    <a asp-action="Index" class="btn btn-secondary">Volver</a>
</div>
